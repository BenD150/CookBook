<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBlue">

    <TextView
        android:id="@+id/creator"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="17dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchIngrAndSteps"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/recipeImage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/searchIngrAndSteps"
        app:layout_constraintEnd_toStartOf="@+id/searchPrepTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/searchRecipeName"
        android:layout_width="178dp"
        android:layout_height="28dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="76dp"
        android:text="@string/strawberry_cheesecake"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchPrepTime"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="9dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recipeImage3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchRecipeName" />

    <TextView
        android:id="@+id/searchCookTime"
        android:layout_width="175dp"
        android:layout_height="36dp"
        android:layout_marginStart="132dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPrepTime" />

    <TextView
        android:id="@+id/searchIngrAndSteps"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDescription" />

    <TextView
        android:id="@+id/searchDescription"
        android:layout_width="287dp"
        android:layout_height="17dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/ingredient_step"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchCookTime" />

    <Button
        android:id="@+id/saveBtnNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="16dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/creator" />
</androidx.constraintlayout.widget.ConstraintLayout>