<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBlue">


    <TextView
        android:id="@+id/creator2"
        android:layout_width="234dp"
        android:layout_height="41dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="4dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/removeBtn" />

    <ImageView
        android:id="@+id/recipeImage2"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/removeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/removeRecipeName"
        android:layout_width="209dp"
        android:layout_height="63dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="104dp"
        android:text="@string/strawberry_cheesecake"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/removeBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/removePrepTime"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/removeBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/removeCookTime"
        android:layout_width="185dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/removePrepTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/removeIngrAndSteps"
        android:layout_width="256dp"
        android:layout_height="84dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="64dp"
        android:text="@string/textview"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/removeBtn" />

    <TextView
        android:id="@+id/removeDescription"
        android:layout_width="408dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="88dp"
        android:text="@string/ingredient_step"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/removeIngrAndSteps"
        app:layout_constraintStart_toEndOf="@+id/removeBtn" />

    <Button
        android:id="@+id/removeBtn"
        android:layout_width="174dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="@string/remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>