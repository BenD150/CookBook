<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBlue">

    <TextView
        android:id="@+id/creator"
        android:layout_width="298dp"
        android:layout_height="41dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="1dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/saveBtnNew"
        app:layout_constraintTop_toBottomOf="@+id/searchIngrAndSteps"/>

    <ImageView
        android:id="@+id/recipeImage3"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/searchRecipeName"
        android:text="Strawberry Cheesecake"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchPrepTime"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/searchRecipeName"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/searchCookTime"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/searchRecipeName"
        app:layout_constraintTop_toBottomOf="@+id/searchPrepTime"/>

    <TextView
        android:id="@+id/searchIngrAndSteps"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_width="550dp"
        android:layout_height="90dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDescription"/>

    <TextView
        android:id="@+id/searchDescription"
        android:text="Ingredients/Steps"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="550dp"
        android:layout_height="30dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/searchRecipeName"
        app:layout_constraintTop_toBottomOf="@+id/searchCookTime"/>

    <Button
        android:id="@+id/saveBtnNew"
        android:text="Save"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="584dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>